name: ESLint
on: push
jobs:
  lint:
    environment: Testing
    runs-on: ubuntu-latest
    steps:
      - name: Print node version
        run: echo "Node version:${{vars.NODE_VERSION}}"
      - name: Get Code
        uses: actions/checkout@v4
      - name: Install node
        uses: actions/setup-node@v3
        with:
          node-version: '20'
      - name: Install Dependencies
        run: npm install
      - name: Run ESLint
        run: npm run lint